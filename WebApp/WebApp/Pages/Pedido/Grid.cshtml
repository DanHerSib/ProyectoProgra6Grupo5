@page
@model WebApp.Pages.Pedido.GridModel
@{
    ViewData["Title"] = "Listado Pedidos";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            Pedido
        </div>
        <div class="card-body">
            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bxs-add-to-queue'></i>
            </a>
            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-striped table table-hover">
                        <thead>
                            <tr>
                                <th>Numero de Pedido</th>
                                <th>Cedula Cliente</th>
                                <th>Nombre Cliente</th>
                                <th>Apellidos</th>
                                <th>Fecha Pedido</th>
                            </tr>
                        </thead>
                        <tboby>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.IdPedido</td>
                                <td>@item.Client.Cedula</td>
                                <td>@item.Client.NombreCliente</td>
                                <td>@item.Client.Apellidos</td>
                                <td>@item.FechaPedido.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdPedido"><i class='bx bx-edit-alt'></i></a>
                                    <button type="button" class="btn btn-danger" onclick="PedidoGrid.OnClickEliminar(@item.IdPedido)">
                                        <i class='bx bx-trash'></i>
                                    </button>
                                </td>
                            </tr>
                            }
                        </tboby>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script defer src="~/App/Pedido/Grid.js"></script>
}