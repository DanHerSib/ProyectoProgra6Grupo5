@page
@model WebApp.Pages.Pedido.EditModel
@{
    ViewData["Title"] = "Editar Pedido";
}

<div id="AppEdit" class="container" data-entity="@JsonSerializer.Serialize(Model.Entity)" v-cloak>
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue? "Actualizar": "Nuevo Pedido")
        </div>
        <div class="card-body">
            <form id="FormEdit" method="post">
                <input type="hidden" asp-for="Entity.IdPedido" v-model="Entity.IdPedido" />

                <div class="form-group mb-3">
                    <label for="Entity.IdCliente" class="form-label">Cliente</label>
                    <select asp-for="Entity.IdCliente" class="form-select" v-model="Entity.IdCliente"
                            asp-items="@(new SelectList(Model.ClienteLista,"Cedula","Nombre","Apellidos","Direccion","Fecha_Nacimiento", "Telefono"))" required>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.FechaPedido" class="form-label">Fecha Pedido</label>
                    <input type="text" class="form-control" asp-for="Entity.FechaPedido" v-model="Entity.FechaPedido" maxlength="25" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.IdProducto" class="form-label">Producto</label>
                    <select asp-for="Entity.IdProducto" class="form-select" v-model="Entity.IdProducto"
                            asp-items="@(new SelectList(Model.ProductoLista,"IdProducto","IdCategoria","NombreProducto","Cantidad_Disponible","Caracteristicas","Estado"))" required>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Cantidad" class="form-label">Cantidad</label>
                    <input type="text" class="form-control" asp-for="Entity.Cantidad" v-model="Entity.Cantidad" maxlength="25" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.SubTotal" class="form-label">Sub Total</label>
                    <input readonly type="text" class="form-control" asp-for="Entity.SubTotal" v-model="Entity.SubTotal" maxlength="25" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Envio" class="form-label">Envio</label>
                    <input type="text" class="form-control" asp-for="Entity.Envio" v-model="Entity.Envio" maxlength="25" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.IVA" class="form-label">IVA</label>
                    <input readonly type="text" class="form-control" asp-for="Entity.IVA" v-model="Entity.IVA" maxlength="25" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Total" class="form-label">Total</label>
                    <input readonly type="text" class="form-control" asp-for="Entity.Total" v-model="Entity.Total" maxlength="25" required>
                </div>

                <div class="row">
                    <div class="col-4">
                        <button type="button" @@click="Save" class="btn btn-primary">
                            @(Model.id.HasValue? "Actualizar": "Agregar")
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script defer src="~/App/Pedido/Edit.js"></script>
}