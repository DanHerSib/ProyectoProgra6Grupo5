@page
@model WebApp.Pages.Producto.EditModel
@{
}


<div id="AppEdit" class="container" data-entity="@JsonSerializer.Serialize(Model.Entity)" v-cloak>
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue? "Actualizar": "Nuevo Producto")
        </div>
        <div class="card-body">
            <form id="FormEdit">
                <input type="hidden" asp-for="Entity.IdProducto" v-model="Entity.IdProducto" />
                <div class="form-group mb-3">
                    <label for="Entity.Categoria" class="form-label">Categoria</label>
                    <input type="text" class="form-control" asp-for="Entity.Categoria" v-model="Entity.Categoria" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.NombreProducto" class="form-label">Nombre Producto</label>
                    <input type="text" class="form-control" asp-for="Entity.NombreProducto" v-model="Entity.NombreProducto" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Cantidad_Disponible" class="form-label">Cantidad Disponible</label>
                    <input type="number" class="form-control" asp-for="Entity.Cantidad_Disponible" v-model="Entity.Cantidad_Disponible" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Caracteristicas" class="form-label">Caracteristicas</label>
                    <input type="text" class="form-control" asp-for="Entity.Caracteristicas" v-model="Entity.Caracteristicas" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Estado" class="form-label">Estado</label>
                    <input type="text" class="form-control" asp-for="Entity.Estado" v-model="Entity.Estado" maxlength="250" required>
                </div>


                <div class="row">
                    <div class="col-4">
                        <button type="submit"  class="btn btn-primary">
                            @(Model.id.HasValue? "Actualizar": "Agregar")
                        </button>
                    </div>

                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts
{

    <script defer src="~/App/Producto/Edit.js"></script>


}